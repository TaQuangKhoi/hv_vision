{% extends 'tr_base.jinja' %}
{% load static %}

{% block additional_js %}
    <script src="{% static 'tr/js/script.js' %}"></script>
{% endblock %}

{% block content %}
    <div class="center-middle-screen">
        <div class="image-box" onclick="clickImageBox()">
            <img src="{{ image }}" id="image-preview" alt="Ảnh Hảo">
        </div>
        <form id="form-upload" method="post" enctype="multipart/form-data">
            {% csrf_token %}
            <input hidden="hidden"
                   type="file"
                   name="imageInput"
                   id="imageInput"
                   accept="image/png, image/jpeg, image/jpg"
            />
            {#            {{ form.imageInput.as_hidden }}#}
            {#        <input type="text" value="Hảo Văn" name="name" id="name"/>#}
            <input class="btn btn-primary" type="submit" value="Canny" id="submit-upload"/>
        </form>
        <div class="image-box" onclick="clickImageBox()">
            <img src="{{ image }}" id="image-preview" alt="Ảnh Hảo">
        </div>
    </div>

{% endblock %}
